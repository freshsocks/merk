@import url('http://fonts.googleapis.com/css?family=Raleway:400,700')
@import 'lexer-styles'

/* Page Vars */

pageWidth = 800px
pagePadding = 60px 85px 60px 100px

/* Colors */
mdColor = #de3
mdColorDark = #660
dark = #333
mdLineHeight = 24px

container()
	max-width pageWidth
	margin 0 auto

button()
	padding 6px 11px
	border-radius 2px
	background arguments
	color #aaa
	border 0 none
	border-bottom 1px solid #222
	font-size 0.8em
	margin 5px 2px
	&:hover
		background #555
		color #bbb
		border-bottom 1px solid #222
	&:active
		background #444
		color #999
		border-top 1px solid #222

body
	background #e7e7e7 url('../images/shattered.png')
	font-family 'Raleway' sans-serif

a
	color #44aaee
	&:visited
		color #2299dd
	&:hover
		color #55bbff

header.top
	width 100%
	margin 0
	background #333 url('../images/use_your_illusion.png')
	h1
		color #69a
		padding 20px 0
		container()
		font-weight normal
		font-size 1em
		display flex
		justify-content flex-start
		align-content center
		align-items center
		span
			margin 5px 3px
		.readme
			button(dark)
		.spacer
			flex 1 1 auto
		#toggle-md
			button(dark)
			align-self flex-end
		.show-files
			button(dark)
			align-self flex-end
	#file-browser
		height 0
		overflow hidden
		transition height 0.4s
		&.active
			height 500px
			overflow scroll
			transition height 0.4s
#content
	container()
	background #f1f1f1
	padding 60px 85px 60px 100px
	display block
	> h1:first-child
		border-bottom 6px solid #226677
		padding 10px 0 20px
		font-size 2em
	h2
		font-size 2.2em
		font-weight normal
		border-bottom 1px solid #aaa
		padding 10px 0
	h3
		padding 10px 0 3px
		margin 20px 0
		border-bottom 1px dotted #dedede
		color #444
		font-size 1.3em
#footer
	container()
#raw-md
	display block
	max-height 0
	background #333
	transition max-height 0.4s
	overflow hidden
	box-shadow 0 -2px 2px #000 inset
	&.active
		max-height 500px
		overflow scroll
		transition max-height 0.4s
	section.content
		container()
		margin 0 auto
		font-family 'Courier New', monospace
		background transparent
		color mdColor
		/*float left*/
		padding 20px 10px
		border 0 none
		&:focus
			outline 0 none
		p
			color mdColor
			padding 0
			margin 0
			display flex
			min-height mdLineHeight
			.line-number
				flex 0 1 auto
				min-width 4%
				margin 0
				padding 0
			pre.content
				flex 1 1 auto
				margin 1px 0 0 0
				padding 1px 0 1px 10px
				background transparent
				color mdColor
				border 0 none
				border-left 1px solid mdColorDark
				&:focus
					outline 0 none
					background #3e3e30
			&.active
				.line-number
					color dark
					background mdColor
header.md-options
	width 100%
	background #999
	height 0px
	transition height 0.4s
	overflow hidden
	&.active
		height 50px
		transition height 0.4s
		overflow hidden
		display block
	.options
		container()
		display flex
		flex-flow column
		justify-content center
		align-items flex-end
		height 100%
		overflow hidden
		.apply-changes
			button(mdColor)
			color dark

dl
	dt
		padding 6px 0
		color #444